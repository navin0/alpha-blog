<h1 class="center">All AlphaBloggers</h1>
<div class="center">
    <%= will_paginate %>
</div>
<ul class="listing">
<% @users.each do |user| %>
    <li>
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <div class="row no-gutter">
                    <div class="col-sm-3">
                        <%= link_to gravatar_for(user), user_path(user) %>
                    </div>
                    <div class="col-sm-9">
                        <div class="article-title center">
                            <%= link_to user.username, user_path(user) %>
                        </div>
                        <div class="center">
                            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </li>
<% end %>
</ul>
<div class="center">
    <%= will_paginate %>
</div>